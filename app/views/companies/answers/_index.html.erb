<!--企業側Q＆A一覧-->
<div class="container">
  <div class="row">
    <div class="box col-md-7">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>企業に関するQ＆A</th>
          </tr>
        </thead>
        <% questions.each do |question| %>
          <tbody>
            <tr>
              <td>
                <strong>Q.</strong>
                <%= link_to companies_answer_path(question) do %>
                  <%= question.title %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>