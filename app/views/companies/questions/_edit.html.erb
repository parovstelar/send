<!--企業側回答投稿フォーム-->
<%= render 'errors', question: @question %>
<%= form_with model: question, url: companies_question_path(question), method: :patch do |f| %>
  <div class="container mx-auto">
    <div class="row">
      <div class="col-3 h4">回答内容</div>
      <div class="form-group col-sm-6">
        <%= f.text_area :answer_content, placeholder: "回答内容を記入", class: "form-control" %>
      </div>
    </div>
    <div class="row d-flex justify-content-center"><%= f.submit 'Q＆Aに追加する', class: "btn btn-secondary" %></div>
  </div>
<% end %>