<!--企業側企業編集-->
<h1>企業情報</h1>

<%= render 'errors', company: @company %>

<%= form_with model: @company, url: companies_company_path, method: :patch do |f| %>

<h4>見出し</h4>
  <%= f.text_field :head %>

<h4>企業名</h4>
  <%= f.text_field :name %>

<h4>企業URL</h4>
  <%= f.text_field :link %>

<h4>住所</h4>
  <%= f.text_field :address %>

<h4>仕事内容</h4>
  <%= f.text_area :content %>

<h4>１日のスケジュール</h4>
  <%= f.text_area :schedule %>

<h4>月給</h4>
  <%= f.text_field :wage %>

<h4>休日</h4>
  <%= f.text_field :vacation %>

<h4>雇用形態</h4>
  <%= f.text_field :employment %>

<h4>福利厚生</h4>
  <%= f.text_field :welfare %>

  <%= f.submit '送信' %>

<% end %>