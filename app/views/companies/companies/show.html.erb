<!--企業側企業詳細-->
<div>
<%= flash[:notice] %>
</div>
<div class="container me-3 my-5 p-0 ml-auto">
  <div class="row">
    <div class="box col-md-8">
      <h3>企業詳細</h3>
      <table class="table">
        <tr>
          <td>見出し</td><td><%= @company.head %></td>
        </tr>
        <tr>
          <td>企業名</td>
          <td>
            <%= link_to '@company.link' do %>
              <%= @company.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>住所</td><td><%= @company.address %></td>
        </tr>
        <tr>
          <td>仕事内容</td><td><%= @company.content %></td>
        </tr>
        <tr>
          <td>１日のスケジュール</td><td><%= @company.schedule %></td>
        </tr>
        <tr>
          <td>月給</td><td><%= @company.wage %></td>
        </tr>
        <tr>
          <td>休日</td><td><%= @company.vacation %></td>
        </tr>
        <tr>
          <td>雇用形態</td><td><%= @company.employment %></td>
        </tr>
        <tr>
          <td>福利厚生</td><td><%= @company.welfare %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<%= render 'companies/answers/index', questions: @questions %>