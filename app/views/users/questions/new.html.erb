<!--人材側質問投稿-->
<div class="col-7 offset-md-1 mt-5 pb-5">
  <h3>質問フォーム：<%= @company.name %></h3>
</div>
<%= render 'companies/questions/errors', question: @question %>
<%= form_with model: @question, url: company_questions_path(@company), method: :post do |f| %>
  <div class="container mx-auto">
    <div class="row">
      <div class="col-3 h4">タイトル</div>
      <div class="form-group col-sm-6"><%= f.text_field :title, placeholder: "タイトルを記入", class: "form-control" %></div>
    </div>
    <div class="row">
      <div class="col-3 h4">質問内容</div>
      <div class="form-group col-sm-6"><%= f.text_area :question_content, placeholder: "質問内容を記入", class: "form-control" %></div>
    </div>
    <div class="row d-flex justify-content-center">
      <span><%= f.submit '　　送信　　', class: "btn btn-secondary" %></span>
      <span>　</span>
      <span><%= link_to "　　戻る　　", company_path(@company), class: "btn btn-secondary" %></span>
    </div>
  </div>
<% end %>